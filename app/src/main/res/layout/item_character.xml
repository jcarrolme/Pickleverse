<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#53B88C"
    app:strokeColor="#53B88C"
    app:strokeWidth="1dp"
    app:cardElevation="@dimen/dimen_10dp"
    android:outlineSpotShadowColor="#53B88C"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:foreground="@drawable/gradient_image"
            android:src="@drawable/mock_rick_img"
            tools:src="@drawable/mock_rick_img"
            tools:targetApi="s" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/ivImage"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginBottom="@dimen/dimen_4dp"
            android:textStyle="bold"
            android:textColor="#C0FF57"
            android:shadowRadius="10"
            android:textSize="16sp"
            android:shadowColor="#53B88C"
            tools:text="Rick Sanchez"/>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/ivImage"
            app:layout_constraintStart_toStartOf="@id/ivImage"
            android:layout_marginBottom="@dimen/dimen_4dp"
            android:background="@drawable/background_rounded_tag_status"
            android:paddingVertical="2dp"
            android:paddingEnd="@dimen/dimen_8dp"
            android:paddingStart="@dimen/dimen_4dp"
            android:visibility="gone"
            android:text="alive"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>